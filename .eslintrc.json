{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "semi": 0,
    "quotes": 0,
    "indent": ["error", 2],
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "never",
        "named": "always",
        "asyncArrow": "always"
      }
    ]
  }
}
